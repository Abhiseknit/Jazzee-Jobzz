<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/applicant_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Your Name"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:background="@drawable/border"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/applicant_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Your Phone Number"
            android:inputType="phone"
            android:padding="12dp"
            android:background="@drawable/border"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/applicant_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Your Age"
            android:inputType="number"
            android:padding="12dp"
            android:background="@drawable/border"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/applicant_education"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Educational Details"
            android:inputType="textMultiLine"
            android:padding="12dp"
            android:background="@drawable/border"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/applicant_interest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Why are you interested in this job?"
            android:inputType="textMultiLine"
            android:padding="12dp"
            android:background="@drawable/border"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/applicant_experience"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Experience"
            android:inputType="textMultiLine"
            android:padding="12dp"
            android:background="@drawable/border"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/applicant_current_job_study"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Relevant Details about Your Current Job/Study"
            android:inputType="textMultiLine"
            android:padding="12dp"
            android:background="@drawable/border"
            android:layout_marginBottom="24dp"/>

        <Button
            android:id="@+id/upload_resume_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload Resume"
            android:backgroundTint="@color/red"
            android:textColor="@android:color/white"
            android:padding="12dp"
            android:textAllCaps="false"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/submit_application_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit Application"
            android:backgroundTint="@color/red"
            android:textColor="@android:color/white"
            android:padding="12dp"
            android:textAllCaps="false"/>
    </LinearLayout>
</ScrollView>
