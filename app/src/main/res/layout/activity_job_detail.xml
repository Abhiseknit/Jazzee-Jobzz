<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/border">

        <TextView
            android:id="@+id/job_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Job Title"
            android:textStyle="bold"
            android:textSize="24sp"
            android:padding="5dp"

            android:layout_marginBottom="8dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location:"
            android:layout_marginBottom="5dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/company_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Company Location"
            android:padding="5dp"
            android:background="@drawable/border"
            android:textSize="18sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/work_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Work Type"
            android:padding="5dp"
            android:background="@drawable/border"
            android:textSize="18sp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/hirer_profile_icon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:scaleType="centerCrop"
                android:padding="5dp"
                android:background="@drawable/border"
                android:src="@drawable/profile" />

            <TextView
                android:id="@+id/hirer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_gravity="center_vertical"
                android:text="Hirer Name"
                android:padding="5dp"

                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/job_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Job Type"
            android:padding="5dp"
            android:background="@drawable/border"
            android:textSize="18sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/salary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Salary/Stipend"
            android:padding="5dp"
            android:background="@drawable/border"
            android:textSize="18sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/required_skills"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Required Skills"
            android:textSize="18sp"
            android:padding="5dp"
            android:background="@drawable/border"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/job_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Job Description"
            android:textSize="18sp"
            android:padding="5dp"
            android:maxLines="30"
            android:background="@drawable/border"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/apply_now_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apply Now"
            android:textSize="18sp"
            android:backgroundTint="@color/red"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</ScrollView>
